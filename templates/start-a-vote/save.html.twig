{% extends "body.html.twig" %}



{% block main %}
    <div class="container">
        {% if redirect %}
            <script> document.location.href = '{{ path("app_jm_form") }}?redirect-save=true&key={{ proposal.urlKey }}' </script>
        {% endif %}
        <div class="row ">
            <div class="col-12 text-center">
                <h1 class="title mb-5">Proposition enregistr√©e !</h1>
                <p>Vous pouvez maintenant partager le lien du vote aux participants :</p>
            </div>
        </div>
        <div class="row ">
            <div class="col-12 col-md-6 m-auto text-center">
                {% if redirect %}
                <input type="text" class="form-control" disabled value="Veuillez patienter ...">
                {% else %}

                <div class="input-group  ">
                    <input type="text" class="form-control autoselect" id="url"
                           value="{{ url("app_jm_vote",{'url_key':  app.request.query.get('key')  }) }}">

                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary copy-to-clipboard" data-target="#url" type="button"><i
                                    class="fas fa-copy mr-2"></i> Copier</button>
                    </div>

                </div>
                <small class="text-primary">Pensez a enregistrer ce lien dans les favoris de votre navigateur !</small>



            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12 text-center">

                <a href="{{ url("app_jm_vote",{'url_key':  app.request.query.get('key')  }) }}" class="btn btn-success"><i
                            class="fas fa-users mr-2"></i>Participer maintenant</a>

                {% endif %}


            </div>
        </div>
    </div>
{% endblock %}